<div class="flex items-center justify-center b-slate-100">
  <!-- Botón sticky -->
  <button id="chatBtn" class="fixed bottom-6 right-6 bg-linear-to-r from-teal-400 to-cyan-500 hover:bg-cyan-500 transition duration-300 text-white rounded-full p-4 shadow-lg shadow-cyan-800/30 z-40">
    <svg class="size-6 stroke-current" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"> <path d="M22 17a2 2 0 0 1-2 2H6.828a2 2 0 0 0-1.414.586l-2.202 2.202A.71.71 0 0 1 2 21.286V5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2z"></path></svg>
  </button>

  <!-- Card overflow -->
  <div id="chatCard" class="fixed bottom-24 right-6 bg-white text-cyan-800 font-medium rounded-lg shadow-2xl shadow-cyan-800/30 w-80 max-h-[600px] overflow-y-auto hidden z-50 transition-all duration-300">
    <div class="flex justify-between items-center mb-4 px-6 py-4 bg-linear-to-r from-teal-400 to-cyan-500">
      <div>
        <img src="/logo.svg" alt="Moito por Ler" class="size-12" />
      </div>
      <button id="closeBtn" class="text-white hover:text-cyan-200 transition"> ✕ </button>
    </div>
    <!-- globos de conversacion tipo chat -->
    <div class="space-y-4 p-6">
      <!-- Bot message -->
      <div class="flex justify-end">
        <div class="border border-dashed border-slate-300 rounded-lg px-4 py-2 max-w-xs">
          <p class="text-sm">¡Hola! ¿En qué puedo ayudarte?</p>
        </div>
      </div>
      <!-- User message -->
      <div class="flex justify-start">
        <div class="bg-cyan-500 text-white rounded-lg px-4 py-2 max-w-xs">
          <p class="text-sm font-semibold">Hola, ¿cómo estás?</p>
        </div>
      </div>

      <!-- Bot message -->
      <div class="flex justify-end">
        <div class="border border-dashed border-cyan-300 rounded-lg px-4 py-2 max-w-xs">
          <p class="text-sm">¡Muy bien! ¿En qué puedo ayudarte?</p>
        </div>
      </div>
    </div>
    <!-- barra inferior -->
    <div class="mt-4 flex flex-col gap-3 px-6 pb-5">
      <textarea id="messageInput" class="w-full p-2 border border-cyan-500 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-cyan-500 placeholder:text-cyan-600 text-sm" placeholder="Escribe tu mensaje..." rows="1"></textarea>
      <div class="flex items-center justify-between">
        <div class="flex gap-2">
          <button class="p-2 bg-cyan-100 rounded-full text-cyan-500 hover:bg-cyan-200 transition" title="Adjuntar archivo">
            <svg class="size-4 stroke-current" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              ><path d="m16 6-8.414 8.586a2 2 0 0 0 2.829 2.829l8.414-8.586a4 4 0 1 0-5.657-5.657l-8.379 8.551a6 6 0 1 0 8.485 8.485l8.379-8.551"></path>
            </svg>
          </button>
          <button class="p-2 bg-cyan-100 rounded-full text-cyan-500 hover:bg-cyan-200 transition" title="Micrófono">
            <svg class="size-5 stroke-current" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 19v3"></path><path d="M19 10v2a7 7 0 0 1-14 0v-2"></path><rect x="9" y="2" width="6" height="13" rx="3"></rect></svg>
          </button>
        </div>
        <button id="sendBtn" class="p-2 text-white bg-cyan-500 hover:bg-cyan-600 rounded-lg transition" title="Enviar">
          <svg class="size-5 stroke-current -rotate-90" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3.714 3.048a.498.498 0 0 0-.683.627l2.843 7.627a2 2 0 0 1 0 1.396l-2.842 7.627a.498.498 0 0 0 .682.627l18-8.5a.5.5 0 0 0 0-.904z"></path><path d="M6 12h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const chatBtn = document.getElementById("chatBtn");
  const chatCard = document.getElementById("chatCard");
  const closeBtn = document.getElementById("closeBtn");
  const messageInput = document.getElementById("messageInput");

  chatBtn?.addEventListener("click", () => {
    chatCard?.classList.toggle("hidden");
  });

  closeBtn?.addEventListener("click", () => {
    chatCard?.classList.add("hidden");
  });

  messageInput?.addEventListener("input", () => {
    messageInput.style.height = "auto";
    messageInput.style.height = messageInput.scrollHeight + "px";
  });
</script>
