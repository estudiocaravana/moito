---
import data from "../data/libros.json";
const { titular } = Astro.props;
const { subtitular } = Astro.props;
const { enlace } = Astro.props;
const { http } = Astro.props;
---

<div class="caixa mt-32">
  <h2 class="text-4xl xl:text-5xl">{titular}</h2>
  {subtitular && <div class="mt-3">{subtitular}</div>}
  <!-- Slider -->
  <div data-hs-carousel='{
  "loadingClasses": "opacity-0",
  "dotsItemClasses": "hs-carousel-active:bg-blue-700 hs-carousel-active:border-blue-700 size-3 border border-gray-400 rounded-full cursor-pointer",
  "slidesQty": {
    "xs": 2,
    "lg": 6
  },
  "isDraggable": true
}' class="relative mt-3">
    <div class="hs-carousel w-full overflow-hidden bg-white">
      <div class="relative min-h-72 -mx-3">
        <!-- transition-transform duration-700 -->
        <div class="hs-carousel-body relative start-0 flex flex-nowrap opacity-0 transition-transform duration-700">
          {
            data.libros.map((libro) => (
              <div class="hs-carousel-slide px-3">
                <a href="/libro" class="hover:text-cyan-500">
                  <div>
                    <div class=" aspect-[1/1.8] flex items-end">
                      <img class="shadow-md transition-all duration-300 hover:mb-3" src={`/src/assets/libros/${libro.imaxe}.jpg`} alt="A brown dog sitting on a grassy field under a clear sky, looking attentively forward, surrounded by trees in the background, calm and peaceful atmosphere" />
                    </div>
                  </div>
                  <div class="font-bold text-xl mt-4 leading-[1.3em]">{libro.tit}</div>
                  <div class="text-base text-slate-500 mt-1">{libro.autor}</div>
                  <div class="text-sm text-slate-500 flex items-center gap-1 mt-3">
                    <div>
                      <svg class="fill-cyan-500 size-4" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z" />
                      </svg>
                    </div>
                    <div class="font-bold text-cyan-500">{libro.nota}</div>
                    <div class="border-l border-slate-300 ml-1 pl-2">{libro.veces} listado</div>
                  </div>
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <button type="button" class="hs-carousel-prev hs-carousel-disabled:opacity-50 hs-carousel-disabled:pointer-events-none absolute inset-y-0 start-0 -translate-x-full inline-flex justify-center items-center w-11.5 h-full text-cyan-500 hover:bg-cyan-500/10 focus:outline-hidden focus:bg-cyan-500/10">
      <span class="text-2xl" aria-hidden="true">
        <svg class="-rotate-90 size-6 stroke-0 fill-current" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13.73 4a2 2 0 0 0-3.46 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path></svg>
      </span>
      <span class="sr-only">Previous</span>
    </button>
    <button type="button" class="hs-carousel-next hs-carousel-disabled:opacity-50 hs-carousel-disabled:pointer-events-none absolute inset-y-0 -end-12 inline-flex justify-center items-center w-11.5 h-full text-cyan-500 hover:bg-cyan-500/10 focus:outline-hidden focus:bg-cyan-500/10">
      <span class="sr-only">Next</span>
      <span class="text-2xl" aria-hidden="true">
        <svg class="rotate-90 size-6 stroke-0 fill-current" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13.73 4a2 2 0 0 0-3.46 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path></svg>
      </span>
    </button>
  </div>
  <!-- Enlace si existe -->
  {
    enlace && (
      <a href={http} class="font-bold block hover:text-slate-600 mt-12">
        {enlace}
        <svg class="size-5 inline-block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m9 18 6-6-6-6" />
        </svg>
      </a>
    )
  }
</div>
