---
import data from "../data/autor.json";
const { titular } = Astro.props;
const { subtitular } = Astro.props;
const { enlace } = Astro.props;
const { http } = Astro.props;
---

<div class="overflow-hidden">
  <div class="caixa pt-24 pb-12">
    <div class="flex gap-4">
      <div>
        <img class="size-10" src="/iconos/megaphone.svg" alt="" />
      </div>
      <div>
        <h2 class="text-4xl">{titular}</h2>
        {subtitular && <div class="mt-3">{subtitular}</div>}
      </div>
    </div>
    <div class="valoracions splide mt-6">
      <div class="splide__track !overflow-visible">
        <ul class="splide__list">
          {
            data.letores.map((letor) => (
              <li class="splide__slide">
                <a href="/libro" class="hover:text-cyan-500">
                  <div>
                    <div class=" aspect-[1/1.8] flex items-end ml-9 lg:ml-12">
                      <img class="shadow-md transition-all duration-300 hover:mb-3" src={`/manolo/${letor.imaxe}.jpg`} alt="A brown dog sitting on a grassy field under a clear sky, looking attentively forward, surrounded by trees in the background, calm and peaceful atmosphere" />
                    </div>
                    <div class="relative overflow-hidden aspect-square rounded-full size-16 lg:size-28 -mt-9 lg:-mt-16 border-2 border-white">
                      <img
                        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 object-cover min-h-full"
                        src={`/letores/${letor.imaxe}.webp`}
                        alt="A brown dog sitting on a grassy field under a clear sky, looking attentively forward, surrounded by trees in the background, calm and peaceful atmosphere"
                      />
                    </div>
                  </div>
                  <div class="text-base text-slate-500 mt-4">
                    <span class=" font-medium text-slate-900">{letor.nome}</span> valorou
                  </div>
                  <div class="font-bold lg:text-xl mt-1 leading-[1.3em]">{letor.libro}</div>
                  <div class="text-sm text-slate-500 flex items-center gap-1 mt-3">
                    <div>Con {letor.nota}</div>
                    <div>
                      <svg class="fill-cyan-500 size-4" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z" />
                      </svg>
                    </div>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
  <!-- Enlace si existe -->
  {
    enlace && (
      <a href={http} class="font-bold block hover:text-slate-600 mt-12">
        {enlace}
        <svg class="size-5 inline-block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m9 18 6-6-6-6" />
        </svg>
      </a>
    )
  }
</div>
