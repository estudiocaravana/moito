---
// filepath: src/components/portada/Temas.astro
import temas from "../../data/temas.json";
---

<div class="bg-cyan-200 pt-12 lg:pt-24 pb-16 lg:pb-32 mt-16 lg:mt-36 overflow-hidden">
  <div class="caixa">
    <div class="flex gap-4">
      <div>
        <img class="size-10 stroke-cyan-900" src="/iconos/trending.svg" alt="" />
      </div>
      <div>
        <h2 class="text-4xl font-bold text-cyan-900">Os temas do momento</h2>
      </div>
    </div>
    <div id="splide" class="splide mt-12">
      <div class="splide__track !overflow-visible">
        <ul class="splide__list">
          {
            temas.libros.map((tema) => (
              <li class="splide__slide">
                <a href="#" class="hover:text-cyan-500 block">
                  <div class="aspect-square bg-white shadow mx-auto rounded-4xl relative overflow-hidden">
                    <img
                      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 object-cover min-h-full"
                      src={`/temas/${tema.imaxe}.jpeg`}
                      alt="A brown dog sitting on a grassy field under a clear sky, looking attentively forward, surrounded by trees in the background, calm and peaceful atmosphere"
                    />
                  </div>
                  <div class="pl-2 mt-4">
                    <span class="font-bold block">{tema.tit}</span>
                    <span class="text-base text-cyan-700">
                      {tema.numero} libros <span class="hidden lg:inline">catalogados</span>
                    </span>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</div>
