---
import data from "../data/footer.json";
---

<!-- banda únete -->
<div class="bg-linear-to-r from-cyan-500 to-cyan-400 text-center py-20 mt-36">
  <div class="caixa">
    <div class="text-4xl font-bold font-display">Únete á nosa Newsletter</div>
    <div class="mt-3 text-xl">e descubre todas as novidades do libro en galego</div>
    <!-- buscar -->
    <div class="flex items-center justify-center mt-16">
      <input type="text" id="buscar" class="h-12 w-full max-w-[460px] text-slate-950 font-medium placeholder:text-slate-950 placeholder:font-medium flex items-center border-slate-300 rounded-s-full pl-9 focus:z-10 focus:border-cyan-500 focus:ring-cyan-500" placeholder="Correo electrónico" />
      <button type="button" class="border-slate-300 h-12 pl-6 pr-9 flex items-center gap-2 rounded-e-full font-semibold text-white bg-slate-950 hover:bg-slate-700 focus:outline-hidden focus:bg-slate-700">Suscribirme</button>
    </div>
    <div class="flex items-center justify-center mt-6">
      <input type="checkbox" class="shrink-0 mt-0.5 border-gray-200 rounded-sm text-cyan-600 focus:ring-cyan-500 checked:border-cyan-500" id="hs-default-checkbox" />
      <label for="hs-default-checkbox" class="ms-3">Lin e acepto a política de privacidade</label>
    </div>
  </div>
</div>
<!-- footer -->
<footer class="bg-slate-950 text-white pt-16 pb-12 text-base font-medium">
  <div class="caixa flex flex-col gap-9 lg:flex-row lg:gap-6">
    <div class="flex-1">
      <img src="/logo_libro.svg" alt="" />
    </div>
    <div class="flex-1">
      <div class="font-bold font-display pb-2 text-xl">M8 por ler</div>
      <ul>
        {
          data.xler.map((item) => (
            <li>
              <a class="text-slate-300 hover:text-slate-400" href={item.url}>
                {item.tit}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="flex-1">
      <div class="font-bold font-display pb-2 text-xl">Descobre</div>
      <ul>
        {
          data.descobre.map((item) => (
            <li>
              <a class="text-slate-300 hover:text-slate-400" href={item.url}>
                {item.tit}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="flex-1">
      <div class="font-bold font-display pb-3 text-xl">Síguenos</div>
      <div class="inline-flex gap-3">
        <a class="text-slate-300 hover:text-slate-400" href="#">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-instagram-icon lucide-instagram">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
          </svg>
        </a>
        <a class="text-slate-300 hover:text-slate-400" href="#">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-twitter-icon lucide-twitter">
            <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  <!-- Política -->
  <div class="caixa flex flex-col gap-9 lg:flex-row lg:gap-6 pt-9 lg:pt-20">
    <div class="flex-1">
      <ul class="flex flex-col gap-1 lg:flex-row lg:gap-6">
        {
          data.politica.map((item) => (
            <li>
              <a class="text-slate-300 hover:text-slate-400" href={item.url}>
                {item.tit}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div>
      <span class="text-slate-300">Todos os dereitos reservados</span>
    </div>
  </div>
</footer>

<!-- Card evento fixed -->
<div class="hidden">
  <div class="fixed z-50 bottom-12 left-12 w-md bg-slate-800 text-slate-100 shadow-lg text-sm px-9 pt-6 pb-6 rounded-2xl flex gap-9">
    <div>
      <img src="/valorou.jpg" alt="" class="w-[120px] -mt-16" />
    </div>
    <div class="flex-1">
      <!-- Usuario -->
      <div><span class="text-cyan-400">Diana Estévez</span> valorou</div>
      <!-- Título -->
      <div class="text-base font-bold pt-1">Ollos de auga</div>
      <!-- Autor -->
      <div>de Domingo Villar</div>
      <!-- Valoración -->
      <div class="flex items-center gap-1 pt-2">
        <div>
          <svg class="fill-cyan-500 size-4" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path
              d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"
            ></path>
          </svg>
        </div>
        <div class="font-bold text-cyan-500">con 5 estrelas</div>
      </div>
      <!-- Enlace -->
      <div class="text-right">
        <a class="text-cyan-500 hover:text-cyan-400 font-bold" href="#">
          Ver libro
          <svg class="size-4 inline-block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </a>
      </div>
    </div>
    <button class="absolute top-0 right-0 p-3">
      <svg class="size-4 stroke-current" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18 6 6 18"></path><path d="m6 6 12 12"></path>
      </svg>
    </button>
  </div>
</div>
