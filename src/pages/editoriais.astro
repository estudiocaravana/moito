---
import Layout from "../layouts/Layout.astro";
import data from "../data/editoriais.json";
---

<Layout>
  <!-- Hero -->
  <div class="bg-linear-to-b from-teal-400 to-cyan-500 pt-28 pb-12">
    <div class="caixa">
      <!-- Migas -->
      <ol class="flex items-center whitespace-nowrap">
        <li class="inline-flex items-center">
          <a class="flex items-center text-sm font-semibold uppercase text-white hover:text-cyan-600 focus:outline-hidden focus:text-cyan-600" href="/"> Inicio </a>
          <svg class="shrink-0 mx-2 size-4 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </li>
        <li class="inline-flex items-center text-sm font-semibold text-white truncate uppercase" aria-current="page">Editoriais</li>
      </ol>
      <!-- Cabecero dupla  -->
      <div class="pt-6 pb-12 xl:py-12">
        <h1 class="block text-5xl lg:text-7xl max-w-xl">Editoriais</h1>
        <div class="mt-3 font-medium">Todas as editoriais por orde alfabético.</div>
      </div>
    </div>
  </div>
  <!-- Matriz de editoriais -->
  <div class="caixa mt-12">
    <div class="flex flex-col gap-9 pt-20 pb-36">
      {
        Object.entries(data.editoriais).map(([letra, items]) => (
          <div class="sm:flex gap-12">
            <div class="text-5xl font-semibold leading-9 font-display text-cyan-500 mb-4 pb-6 w-16 sm:border-r-2 border-cyan-500">{letra}</div>
            <div class="flex-1 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-y-6 gap-x-36 pb-6">
              {items.map((item) => (
                <div>
                  <div class="text-base text-gray-700 font-semibold whitespace-nowrap">{item.nome}</div>
                  <a href="#" class="block text-sm text-gray-400 hover:text-gray-300 underline underline-offset-4 whitespace-nowrap">
                    {item.titulos} Títulos
                  </a>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
