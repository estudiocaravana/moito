---
import Layout from "../layouts/Layout.astro";
import Offcanvas from "../components/categoria/offcanvas.astro";
import data from "../data/clubs.json";
import Valoraciones from "../components/Valoraciones.astro";
import Paginador from "../components/paginador.astro";
---

<Layout>
  <!-- Hero -->
  <div class="bg-linear-to-b from-teal-400 to-cyan-500 pt-28 pb-12">
    <div class="caixa">
      <!-- Migas -->
      <ol class="flex items-center whitespace-nowrap">
        <li class="inline-flex items-center">
          <a class="flex items-center text-sm font-semibold uppercase text-white hover:text-cyan-600 focus:outline-hidden focus:text-cyan-600" href="/"> Inicio </a>
          <svg class="shrink-0 mx-2 size-4 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </li>
        <li class="inline-flex items-center">
          <a class="flex items-center text-sm font-semibold uppercase text-white hover:text-cyan-600 focus:outline-hidden focus:text-cyan-600" href="/"> Clubs de lectura </a>
        </li>
      </ol>
      <!-- Cabecero dupla  -->
      <div class="pt-6 pb-12 xl:py-12">
        <h1 class="block text-5xl lg:text-7xl max-w-xl">Clubs</h1>
        <div class="mt-3 font-medium">Lorem ipsum dolor sit amet...</div>
      </div>
    </div>
  </div>
  <!-- Botóns filtros -->
  <div class="caixa flex justify-between -mt-6">
    <!-- Offcanvas -->
    <Offcanvas />
    <!-- dropdown -->
    <div>
      <div class="hs-dropdown [--placement:bottom-right] relative inline-flex">
        <button id="hs-dropdown-default" type="button" class="hs-dropdown-toggle boton gris !text-slate-800" aria-haspopup="menu" aria-expanded="false" aria-label="Dropdown">
          <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 16 4 4 4-4"></path><path d="M7 20V4"></path>
            <path d="m21 8-4-4-4 4"></path>
            <path d="M17 4v16"></path>
          </svg>
          <span class="hidden md:block">Máis recentes</span>
          <svg class="hs-dropdown-open:rotate-180 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m6 9 6 6 6-6"></path>
          </svg>
        </button>
        <div
          class="hs-dropdown-menu transition-[opacity,margin] duration hs-dropdown-open:opacity-100 opacity-0 hidden min-w-60 bg-slate-100 shadow-md rounded-lg mt-2 after:h-4 after:absolute after:-bottom-4 after:start-0 after:w-full before:h-4 before:absolute before:-top-4 before:start-0 before:w-full z-30"
          role="menu"
          aria-orientation="vertical"
          aria-labelledby="hs-dropdown-default"
        >
          <div class="p-1 space-y-0.5">
            <a class="flex items-center gap-x-3.5 py-2 px-3 rounded-lg text-base text-slate-800 hover:bg-slate-200 focus:outline-hidden focus:bg-slate-200" href="#">Opción 1</a>
            <a class="flex items-center gap-x-3.5 py-2 px-3 rounded-lg text-base text-slate-800 hover:bg-slate-200 focus:outline-hidden focus:bg-slate-200" href="#">Opción 2</a>
            <a class="flex items-center gap-x-3.5 py-2 px-3 rounded-lg text-base text-slate-800 hover:bg-slate-200 focus:outline-hidden focus:bg-slate-200" href="#">Opción 3</a>
            <a class="flex items-center gap-x-3.5 py-2 px-3 rounded-lg text-base text-slate-800 hover:bg-slate-200 focus:outline-hidden focus:bg-slate-200" href="#">Opción 4</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Matriz de autores -->
  <div class="caixa mt-12">
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-x-3 gap-y-9 sm:gap-x-6 sm:gap-y-16 mt-20 mb-36">
      {
        data.clubs.map((club) => (
          <div>
            <a href="/club" class="hover:text-cyan-500">
              <div>
                <div class="aspect-square flex items-end">
                  <div class="shadow-md transition-all duration-500 hover:scale-90 bg-cyan-500 size-full rounded-2xl" />
                </div>
              </div>
              <div class="text-base sm:text-2xl mt-4 leading-[1.3em]">{club.nombre}</div>
              { <!-- Acceso --> }
              <div class="text-sm flex items-center gap-2 mt-3">
                <div>
                    {club.acceso ? (
                    <svg class="size-5 stroke-teal-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"/></svg>
                    ) : (
                    <svg class="size-5 stroke-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"/><rect x="2" y="4" width="20" height="16" rx="2"/></svg>
                    )}
                </div>
                <div class="uppercase font-semibold">{club.acceso ? (
                    <span class="text-teal-500">Club Aberto</span>
                    ) : (
                    <span class="text-slate-400">Accceso por invitación</span>
                    )}</div>
              </div>
              <div class="text-sm mt-2">{club.descripcion}</div>
              { <!-- Localizacion --> }
              {club.localizacion === "virtual" ? (
                <div class="text-sm flex items-center gap-2 mt-3 text-slate-400">
                  <div>
                    <svg class="fill-none stroke-current size-5 stroke-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="3" rx="2"/><line x1="8" x2="16" y1="21" y2="21"/><line x1="12" x2="12" y1="17" y2="21"/></svg>
                  </div>
                  <div>Reunións virtuais</div>
                </div>
              ) : (
              <div class="text-sm flex items-center gap-2 mt-3 text-slate-400">
                <div>
                  <svg class="fill-none stroke-current size-5 stroke-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/></svg>
                </div>
                <div class="">{club.localizacion}</div>
              </div>
              )}
              { <!-- Tipo --> }
              <div class="text-sm flex items-center gap-2 mt-3 text-slate-400">
                <div>
                  <svg class="fill-none stroke-current size-5 stroke-2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <>
                      <circle cx="12" cy="8" r="5" />
                      <path d="M20 21a8 8 0 0 0-16 0" />
                    </>
                  </svg>
                </div>
                <div class="">{club.tipo}</div>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
  <Paginador />
  <div class="bg-slate-100 pb-24 mt-12">
    <!-- Valoraciones da comunidade -->
    <Valoraciones titular="Qué di a comunidade da Ciencia Ficción?" />
  </div>
</Layout>
