---
import Layout from "../layouts/Layout.astro";
import data from "../data/autores.json";
---

<Layout>
  <!-- Hero -->
  <div class="bg-linear-to-b from-teal-400 to-cyan-500 pt-28 pb-12">
    <div class="caixa">
      <!-- Migas -->
      <ol class="flex items-center whitespace-nowrap">
        <li class="inline-flex items-center">
          <a class="flex items-center text-sm font-semibold uppercase text-white hover:text-cyan-600 focus:outline-hidden focus:text-cyan-600" href="/"> Inicio </a>
          <svg class="shrink-0 mx-2 size-4 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </li>
        <li class="inline-flex items-center text-sm font-semibold text-white truncate uppercase" aria-current="page">Editoriais</li>
      </ol>
      <!-- Cabecero dupla  -->
      <div class="pt-6 pb-12 xl:py-12">
        <h1 class="block text-5xl lg:text-7xl max-w-4xl">Autores galegos do momento</h1>
        <div class="mt-3 font-medium">Os vinte autores máis populares de M8porler.</div>
      </div>
    </div>
  </div>
  <!-- Matriz de autores -->
  <div class="caixa mt-12">
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-x-3 gap-y-9 sm:gap-x-6 sm:gap-y-16 mt-20 mb-36">
      {
        data.autores.map((autor) => (
          <div>
            <a href={`/autor/${autor.slug}`} class="hover:text-cyan-500">
              <div>
                <div class="aspect-square flex items-end">
                  <div class="shadow-md transition-all duration-500 hover:scale-90 bg-cyan-500 size-full rounded-2xl" />
                </div>
              </div>
              <div class="text-base sm:text-xl mt-4 leading-[1.3em]">{autor.nombre}</div>
              <div class="font-semibold text-base font-display mt-2 small">{autor.titulos} Títulos</div>
              <div class="text-sm flex items-center gap-1 mt-3">
                <div>
                  <svg class="fill-none stroke-cyan-500 size-5 stroke-2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                    <>
                      <circle cx="12" cy="8" r="5" />
                      <path d="M20 21a8 8 0 0 0-16 0" />
                    </>
                  </svg>
                </div>
                <div class="">{autor.seguidores} seguidores</div>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
